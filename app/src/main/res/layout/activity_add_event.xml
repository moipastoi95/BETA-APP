<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/evtNewMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".AddEventActivity">

    <EditText
        android:id="@+id/evtNewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Titre"
        android:inputType="textPersonName"
        android:maxLength="255" />

    <EditText
        android:id="@+id/evtNewDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/evtNewTitle"
        android:ems="10"
        android:gravity="top"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:maxLines="20" />

    <Switch
        android:id="@+id/multiDaysSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evtNewDetail"
        android:text="Evènement sur plusieurs jours" />

    <LinearLayout
        android:id="@+id/dateTimeStartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multiDaysSwitch"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prévu le :" />

        <Button
            android:id="@+id/evtNewDateTimeStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded"
            android:text="14/07/1789 - 14:45"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateTimeEndLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTimeStartLayout"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jusqu'au :" />

        <Button
            android:id="@+id/evtNewDateTimeEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded"
            android:text="14/07/1789 - 14:45"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/evtNewPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTimeEndLayout"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_rounded"
        android:text="chat.png"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evtNewPic"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Club associé :" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sSpinnerClub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="right" />
    </LinearLayout>

    <Button
        android:id="@+id/evtNewBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:padding="15dp"
        android:text="retour"
        android:background="@drawable/btn_rounded"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/evtNewSendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:padding="15dp"
        android:text="Ok"
        android:background="@drawable/btn_rounded"
        android:textColor="@android:color/white"/>
</RelativeLayout>